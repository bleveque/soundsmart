// common rules and functions to be included in other stylus files

// font families
font1 = 'Raleway', sans-serif
font2 = 'Open Sans', sans-serif
font3 = 'Times', serif

// font colors
color1 = #222222
color2 = #ffffff
color3 = #4acd32

// background colors
background1 = #ff7700
background2 = #00ff77
background3 = #7700ff

// mixins and functions
wh(n)
	width n
	height n

lt(n)
	left n
	top n

border-radius()
	border-radius arguments
	-webkit-border-radius arguments
	-moz-border-radius arguments

vert-gradient(topColor, bottomColor)
	background -webkit-gradient(linear,left top,left bottom,from(topColor),to(bottomColor))
	background linear-gradient(to bottom,topColor,bottomColor)

// common rules

*
	margin 0
	padding 0

a
	color white
	text-decoration none

body
	color #000040
	font-family 'IM Fell Double Pica', serif;

@font-face
	font-family parisish
	src url('../fonts/parisish/Parisish.ttf')